module unittest_model_load
  use funit
  use ftorch, only: torch_kCPU, torch_kFloat32, torch_model, torch_model_load
  use iso_c_binding, only: c_associated

  implicit none

  public

  ! All unit tests in this module run on CPU
  integer, parameter :: device_type = torch_kCPU

  character(len=256), parameter :: filename = "test_model.pt"

contains

  @test
  subroutine test_torch_model_load_pointers()
    type(torch_model) :: model

    ! Check the model pointer is not associated
    @assertFalse(c_associated(model%p))

    ! Load the test model from file
    call torch_model_load(model, trim(filename), device_type)

    ! Check the model pointer is associated
    @assertTrue(c_associated(model%p))

  end subroutine test_torch_model_load_pointers

end module unittest_model_load
